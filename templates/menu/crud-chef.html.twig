

{# templates/menu.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}
    {% if action == 'list' %}
        Liste des Menus
    {% elseif action == 'new' %}
        Créer un Nouveau Menu
    {% elseif action == 'edit' %}
        Éditer le Menu : {{ menu.title }}
    {% endif %}
{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    {% if action == 'list' %}
        <h1 class="text-3xl font-bold mb-6 text-center">Liste des Menus</h1>
        <div class="flex justify-end mb-4">
            <a href="{{ path('menu_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Créer un Nouveau Menu
            </a>
        </div>

        {% if menus is empty %}
            <p class="text-center text-gray-500">Aucun menu trouvé.</p>
        {% else %}
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white border border-gray-200">
                    <thead>
                        <tr class="w-full bg-gray-100 border-b border-gray-200">
                            <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700">Image</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700">Chef</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700">Titre</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700">Prix</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700">Description</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700">Produits</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-gray-700">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for menu in menus %}
                            <tr class="border-b border-gray-200 hover:bg-gray-50">

                                <td class="py-3 px-4">
                                    {% if menu.picture %}
                                        <img src="{{ asset('images/menu_images/' ~ menu.picture) }}" alt="{{ menu.title }}" class="w-20 h-20 object-cover rounded-md">
                                    {% else %}
                                        <span class="text-gray-400">Pas d'image</span>
                                    {% endif %}
                                </td>
                                
                                {% if menu.chef %}
                                    <td class="py-3 px-4">{{ menu.chef.id }}</td>
                                {% else %}
                                    <td class="py-3 px-4">Pas de chef assigné</td>
                                {% endif %}
                                <td class="py-3 px-4">{{ menu.title }}</td>
                                <td class="py-3 px-4">{{ menu.description }}</td>
                                <td class="py-3 px-4">{{ menu.price }} €</td>
                                <td class="py-3 px-4">
                                    {% for product in menu.products %}
                                        {{ product.name }}{% if not loop.last %}, {% endif %}
                                    {% else %}
                                        <span class="text-gray-400">Aucun produit associé</span>
                                    {% endfor %}
                                </td>
                                <td class="py-3 px-4 flex space-x-2">
                                    <a href="{{ path('menu_edit', { 'id': menu.id }) }}" class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-1 px-2 rounded text-sm">
                                        Éditer
                                    </a>
                                    <form method="post" action="{{ path('menu_delete', { 'id': menu.id }) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce menu ?');" class="inline">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ menu.id) }}">
                                        <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 rounded text-sm">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    {% endif %}

    {% if action == 'new' %}
        <h1 class="text-3xl font-bold mb-6 text-center">Créer un Nouveau Menu</h1>
        <div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            
            <div>
                {{ form_label(form.chef, 'Chef', {'label_attr': {'class': 'block text-gray-700 font-medium'}}) }}
                {{ form_widget(form.chef, {'attr': {'class': 'form-input mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50'}}) }}
                {{ form_errors(form.chef, {'attr': {'class': 'text-red-600 mt-1'}}) }}
            </div>
        

            <div>
                {{ form_label(form.title, 'Titre du Menu', {'label_attr': {'class': 'block text-gray-700 font-medium'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-input mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50'}}) }}
                {{ form_errors(form.title, {'attr': {'class': 'text-red-600 mt-1'}}) }}
            </div>

        
            <div>
                {{ form_widget(form.imageFile, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(form.imageFile, {'attr': {'class': 'text-red-600'}}) }}
                
            </div>
        

            <div>
                {{ form_label(form.price, 'Prix du Menu', {'label_attr': {'class': 'block text-gray-700 font-medium'}}) }}
                {{ form_widget(form.price, {'attr': {'class': 'form-input mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50'}}) }}
                {{ form_errors(form.price, {'attr': {'class': 'text-red-600 mt-1'}}) }}
            </div>

        
            <div>
                {{ form_label(form.description, 'Description du Menu', {'label_attr': {'class': 'block text-gray-700 font-medium'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-input mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50'}}) }}
                {{ form_errors(form.description, {'attr': {'class': 'text-red-600 mt-1'}}) }}
            </div>

        
            <div>
                {{ form_label(form.products, 'Produits', {'label_attr': {'class': 'block text-gray-700 font-medium'}}) }}
                {{ form_widget(form.products, {'attr': {'class': 'form-multiselect mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50'}}) }}
                {{ form_errors(form.products, {'attr': {'class': 'text-red-600 mt-1'}}) }}
            </div>

            <!-- Actions -->
            <div class="flex justify-end space-x-2 mt-4">
                <a href="{{ path('menu_index') }}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                    Annuler
                </a>
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Enregistrer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    {% endif %}

    {% if action == 'edit' %}
        <h1 class="text-3xl font-bold mb-6 text-center">Éditer le Menu : {{ menu.title }}</h1>
        <div class="max-w-lg mx-auto">
            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                {{ form_label(form.title, 'Titre du Menu', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(form.title, {'attr': {'class': 'text-red-600'}}) }}
            </div>

            <div>
                {{ form_widget(form.imageFile, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(form.imageFile, {'attr': {'class': 'text-red-600'}}) }}
                
            </div>

            <div>
                {{ form_label(form.price, 'Prix du Menu', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(form.price, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(form.price, {'attr': {'class': 'text-red-600'}}) }}
            </div>

            <div>
                {{ form_label(form.description, 'Description du Menu', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(form.description, {'attr': {'class': 'text-red-600'}}) }}
            </div>

            <div>
                {{ form_label(form.products, 'Produits', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(form.products, {'attr': {'class': 'form-multiselect mt-1 block w-full'}}) }}
                {{ form_errors(form.products, {'attr': {'class': 'text-red-600'}}) }}
            </div>

            <div class="flex justify-end">
                <a href="{{ path('menu_index')}}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded mr-2">
                    Annuler
                </a>
                <a href="{{ path('menu_edit', { 'id': menu.id }) }}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded mr-2">Éditer le Menu</a>
            </div>
            {{ form_end(form) }}
        </div>
    {% endif %}

</div>
{% endblock %}


