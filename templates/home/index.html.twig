{% block body %}

<div class="flex flex-col items-center">
    <!-- Section 1 -->
   
    <video class="w-full h-auto max-w-full" autoplay muted>
        <source src="/video/123629-728697948.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
  

    <!-- Section 2 ici la card de 3 et fini -->
    <section class="w-full  bg-gradient-to-r via-orange-100 to-yellow-200 from-red-300 flex items-center justify-center">
        <div class="max-w-screen-xl mx-auto px-4 py-40">

            
