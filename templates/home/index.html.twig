{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block stylesheets %}
{{ encore_entry_link_tags('app') }}
<link rel="stylesheet" href="{{ asset('styles/home.css') }}">
{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}

<div class="flex flex-col items-center">
    <!-- Section 1 -->

    <video class="w-full h-auto max-w-full" autoplay muted>
        <source src="/video/123629-728697948.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>


    <!-- Section 2 ici la card de 3 et fini -->
    <section
        class="w-full  bg-gradient-to-r via-orange-100 to-yellow-200 from-red-300 flex items-center justify-center">
        <div class="max-w-screen-xl mx-auto px-4 py-40">


            <!-- Titre Centré -->
            <div class="text-center mb-12">
                <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-center text-gray-900 dark:text-white">
                    Nos Menus
                </h2>
            </div>

            <!-- Conteneur des Cartes -->
            <div class="flex flex-wrap -mx-4">
                {% for menu in menus %}
                <div class="flex-1 md:w-1/2 lg:w-1/3 xl:w-1/4 px-8 py-20">
                    <div
                        class="bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 flex flex-col h-full">

                        <img class="rounded-t-lg w-full h-48 object-cover"
                            src="{{ asset('images/menu_images/' ~ menu.picture) }}" />

                        <div class="p-5 flex-grow flex flex-col">

                            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{
                                menu.title }}</h5>

                            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{ menu.description }}</p>
                            <div class="flex-grow"></div> <!-- Utilisé pour occuper l'espace disponible -->
                            <div class="mt-auto"> <!-- Pour que le bouton soit en bas -->

                                <p class="mb-3 font-bold text-gray-900 dark:text-white">{{ menu.price }} €</p>

                                <a href="#"
                                    class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                    Commander
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>


    <!-- Section 3 -->
    <section class="w-full bg-cover bg-center bg-fixed h-[20vh] flex items-center justify-center text-white parallax">
        <div class="relative z-10 text-center">
            
        </div>
    </section>

    <!-- Section 4 -->
    <section id="products"
        class="w-full bg-gradient-to-r from-red-300 to-yellow-200 via-orange-100 flex items-center justify-center">
        <div class="max-w-screen-xl mx-auto px-4 py-40">
            <div class="text-center mb-12">
                <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-center text-gray-900 dark:text-white">
                    Nos Produits
                </h2>
            </div>

            <div class="flex flex-wrap -mx-4">
                {% for product in products %}

                <div class="flex-1 md:w-1/2 lg:w-1/3 xl:w-1/4 px-8 py-20">
                    <div
                        class="bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 flex flex-col h-full">

                        <img class="rounded-t-lg w-full h-48 object-cover"
                            src="{{ asset('images/product_images/' ~ product.picture) }}" />

                        <div class="p-5 flex-grow flex flex-col">

                            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{
                                product.name }}</h5>

                            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{ product.description }}</p>
                            <div class="flex-grow"></div> <!-- Utilisé pour occuper l'espace disponible -->
                            <div class="mt-auto"> <!-- Pour que le bouton soit en bas -->

                                <p class="mb-3 font-bold text-gray-900 dark:text-white">{{ product.price }} €</p>

                                <a href="#"
                                    class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                    Commander
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                {% endfor %}
            </div>

            <div class="mt-10 flex justify-center">
                {{ knp_pagination_render(products) }}
            </div>
        </div>
    </section>


    <!-- Section 5 -->
    <section class="w-full bg-cover bg-center bg-fixed h-[20vh] flex items-center justify-center text-white parallax-2">
        <div class="relative z-10 text-center parallax-content-2">

        </div>
    </section>

    <!-- Section 6 -->
    <section
        class="w-full  flex items-center justify-center bg-gradient-to-r from-purple-400 via-indigo-300 to-blue-200  ">
        <div class="py-8 lg:py-16 px-4 mx-auto max-w-screen-md">
            <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-center text-gray-900 dark:text-white">Contact Us
            </h2>
            <p class="mb-8 lg:mb-16 font-light text-center text-gray-500 dark:text-gray-400 sm:text-xl">Got a technical
                issue? Want to send feedback about a beta feature? Need details about our Business plan? Let us know.
            </p>
            <form action="#" class="space-y-8">
                <div>
                    <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Your
                        email</label>
                    <input type="email" id="email"
                        class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"
                        placeholder="name@flowbite.com" required>
                </div>
                <div>
                    <label for="subject"
                        class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Subject</label>
                    <input type="text" id="subject"
                        class="block p-3 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"
                        placeholder="Let us know how we can help you" required>
                </div>
                <div class="sm:col-span-2">
                    <label for="message" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400">Your
                        message</label>
                    <textarea id="message" rows="6"
                        class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg shadow-sm border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                        placeholder="Leave a comment..."></textarea>
                </div>
                <button type="submit"
                    class="py-3 px-5 text-sm font-medium text-center text-white rounded-lg bg-primary-700 sm:w-fit hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Send
                    message</button>
            </form>
        </div>
    </section>



</div>

{% endblock %}
{% block javascripts_stripe %}
<script src="https://js.stripe.com/v3/"></script>
<script>
    var stripePublicKey = {{ stripe_public_key| json_encode | raw }};
    var stripe = Stripe(stripePublicKey);

    var checkoutButtons = document.querySelectorAll('.checkout-button');

    checkoutButtons.forEach(function (checkoutButton) {

        checkoutButton.addEventListener('click', function () {
            const menuPrice = this.getAttribute('data-price');
            console.log('clicked ' + menuPrice);

            fetch('/create-checkout-session', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ price: menuPrice }) // Inclure menuPrice dans le corps de la requête
            })
                .then(function (response) {
                    return response.json();
                })
                .then(function (sessionId) {
                    return stripe.redirectToCheckout({ sessionId: sessionId.id });
                })
                .then(function (result) {
                    if (result.error) {
                        alert(result.error.message);
                    }
                })
                .catch(function (error) {
                    console.error('Error:', error);
                });
        });
    });
</script>
{% endblock %}