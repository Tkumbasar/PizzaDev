
{% extends 'base.html.twig' %}

{% block title %}Customer Profile{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
    <div class="flex flex-col bg-white shadow-lg rounded-lg overflow-hidden max-w-md mx-auto">
        
        <!-- Contenu de la carte -->
        <div class="flex flex-col p-6 space-y-6">
            <h1 class="text-2xl font-bold text-center text-gray-800">Customer Profile</h1>

            {{ form_start(form, { 'attr': { 'class': 'space-y-4' } }) }}
                <!-- Nom -->
                <div class="flex flex-col">
                    <label for="{{ form.name.vars.id }}" class="text-sm font-semibold text-gray-700 mb-1">Name</label>
                    {{ form_widget(form.name, { 'attr': { 'class': 'form-input block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' } }) }}
                    {{ form_errors(form.name) }}
                </div>

                <!-- Prénom -->
                <div class="flex flex-col">
                    <label for="{{ form.firstname.vars.id }}" class="text-sm font-semibold text-gray-700 mb-1">First Name</label>
                    {{ form_widget(form.firstname, { 'attr': { 'class': 'form-input block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' } }) }}
                    {{ form_errors(form.firstname) }}
                </div>

                <!-- Genre -->
                <div class="flex flex-col">
                    <label for="{{ form.gender.vars.id }}" class="text-sm font-semibold text-gray-700 mb-1">Gender</label>
                    {{ form_widget(form.gender, { 'attr': { 'class': 'form-select block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' } }) }}
                    {{ form_errors(form.gender) }}
                </div>

                <!-- Date de Naissance -->
                <div class="flex flex-col">
                    <label for="{{ form.dateOfBirthday.vars.id }}" class="text-sm font-semibold text-gray-700 mb-1">Date of Birth</label>
                    {{ form_widget(form.dateOfBirthday, { 'attr': { 'class': 'form-input block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' } }) }}
                    {{ form_errors(form.dateOfBirthday) }}
                </div>

                <!-- Téléphone -->
                <div class="flex flex-col">
                    <label for="{{ form.phone.vars.id }}" class="text-sm font-semibold text-gray-700 mb-1">Phone</label>
                    {{ form_widget(form.phone, { 'attr': { 'class': 'form-input block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' } }) }}
                    {{ form_errors(form.phone) }}
                </div>

                <!-- Ville -->
                <div class="flex flex-col">
                    <label for="{{ form.city.vars.id }}" class="text-sm font-semibold text-gray-700 mb-1">City</label>
                    {{ form_widget(form.city, { 'attr': { 'class': 'form-input block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' } }) }}
                    {{ form_errors(form.city) }}
                </div>

                <!-- Adresse -->
                <div class="flex flex-col">
                    <label for="{{ form.adress.vars.id }}" class="text-sm font-semibold text-gray-700 mb-1">Address</label>
                    {{ form_widget(form.adress, { 'attr': { 'class': 'form-textarea block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' } }) }}
                    {{ form_errors(form.adress) }}
                </div>

                <!-- Bouton de soumission -->
                <div class="flex justify-center">
                    <button type="submit" class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 w-full rounded transition duration-300 ease-in-out">
                        Save
                    </button>
                </div>
            {{ form_end(form) }}

            <!-- Formulaire de suppression -->
            <hr class="my-6">

            <form id="delete-form" method="post" action="{{ path('customer_delete') }}" class="flex  justify-center">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
                <button type="button" onclick="confirmDelete()" class="bg-red-500 hover:bg-red-600 text-white w-full font-bold py-2 px-4 rounded transition duration-300 ease-in-out">
                    Delete Profile
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    function confirmDelete() {
        if (confirm('Are you sure you want to delete your profile? This action cannot be undone.')) {
            document.getElementById('delete-form').submit();
        }
    }
</script>
{% endblock %}



