
{% extends 'base.html.twig' %}

{% block title %}Customer Profile{% endblock %}

{% block body %}
    <div class="container mx-auto p-6 max-w-lg">
        <h1 class="text-3xl font-bold mb-6">Customer Profile</h1>

        {{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}
            <div class="grid grid-cols-1 gap-6">
                <div>
                    {{ form_row(form.name, { 'attr': { 'class': 'form-input' } }) }}
                </div>
                <div>
                    {{ form_row(form.firstname, { 'attr': { 'class': 'form-input' } }) }}
                </div>
                <div>
                    {{ form_row(form.gender, { 'attr': { 'class': 'form-select' } }) }}
                </div>
                <div>
                    {{ form_row(form.dateOfBirthday, { 'attr': { 'class': 'form-input' } }) }}
                </div>
                <div>
                    {{ form_row(form.phone, { 'attr': { 'class': 'form-input' } }) }}
                </div>
                <div>
                    {{ form_row(form.city, { 'attr': { 'class': 'form-input' } }) }}
                </div>
                <div>
                    {{ form_row(form.adress, { 'attr': { 'class': 'form-textarea' } }) }}
                </div>
            </div>

            <div class="flex justify-end mt-6">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        {{ form_end(form) }}

        <hr class="my-6">

        <form id="delete-form" method="post" action="{{ path('customer_delete') }}" class="mt-4">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
            <button type="button" onclick="confirmDelete()" class="btn btn-danger">Delete Profile</button>
        </form>
    </div>

    <script>
        function confirmDelete() {
            if (confirm('Are you sure you want to delete your profile? This action cannot be undone.')) {
                document.getElementById('delete-form').submit();
            }
        }
    </script>
{% endblock %}




