{% block body %}
    <section id="products" class="w-full flex items-center justify-center">
        <div class="max-w-screen-xl mx-auto px-4 py-20">
            <div class="text-center mb-12">
                <h2 class="mb-4 font-bold ">
                    Nos Produits
                </h2>
                <h6 class=" font-medium mb-4 text-center">
                    Explorez notre sélection de boissons rafraîchissantes, pizzas savoureuses, et autres surprises gourmandes !                
                </h6>
            </div>

            <div class="flex flex-wrap -mx-4 justify-center">
                {% for product in products %}
                <div class="w-full md:w-1/2 lg:w-1/3 xl:w-1/2 px-4 py-10 flex justify-center items-center">
                    <div class="bg-white rounded-lg  flex flex-col h-full w-full max-h-[500px] max-w-[400px]">

                        <img src="{{ asset('images/product_images/' ~ product.picture) }}" alt="{{ product.name }}" class="rounded-t-lg w-full h-48 object-cover">

                        <div class="p-5 flex-grow flex flex-col">
                            <h5 class="mb-2 text-2xl font-bold ">{{ product.name }}</h5>
                            <ul class="space-y-2 mb-3">
                                <li class="bg-red-100"><strong>Description:</strong> {{ product.description }}</li>
                                <li class="bg-purple-100"><strong>Catégorie:</strong> {{ product.category.name }}</li>
                            </ul>
                            <div class="flex-grow"></div> <!-- Utilisé pour occuper l'espace disponible -->
                            <div class="mt-auto"> <!-- Pour que le bouton soit en bas -->
                                <p class="mb-3 font-bold text-gray-900 dark:text-white">{{ product.price }} €</p>
                                {% if app.user and 'ROLE_CUSTOMER' in app.user.roles %}
                                    <a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                        Acheter
                                    </a>
                                {% else %}
                                    <a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-500 rounded-lg cursor-not-allowed" title="Vous devez être connecté pour acheter">
                                        Acheter
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="mt-10 flex justify-center">
                {{ knp_pagination_render(products) }}
            </div>
        </div>
    </section>
{% endblock %}





        
                    
                    



