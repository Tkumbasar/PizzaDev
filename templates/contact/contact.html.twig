{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
<div class="flex justify-center">
    <div class=" p-6 m-10  rounded-lg  bg-white max-w-lg w-full">
        <h1 class="text-3xl font-semibold mb-6 text-center">Contactez-nous</h1>

            {{ form_start(formulaire, {'attr': {'class': 'space-y-4'}}) }}


            <div class="flex flex-col p-2">
                {{ form_label(formulaire.email, 'Votre Email:', {'label_attr': {'class': 'text-sm font-medium text-blue-700 mb-2'}}) }}
                {{ form_widget(formulaire.email, {'attr': {'class': 'border border-gray-300 rounded-lg p-3 focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(formulaire.email, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
            </div>


            <div class="flex flex-col p-2">
                {{ form_label(formulaire.content, 'Votre Message:', {'label_attr': {'class': 'text-sm font-medium text-orange-700 mb-2'}}) }}
                {{ form_widget(formulaire.content, {'attr': {'class': 'border border-gray-300 rounded-lg p-3 h-40 resize-none focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(formulaire.content, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
            </div>
 
              
            
            <div class="mt-6 p-2">
                {{ form_row(formulaire.envoyer, {'attr': {'class': 'w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50'}}) }}   
            </div>
            

            {{ form_end(formulaire) }}

            {% for flash_message in app.session.flashbag.get('error') %}
            <div class="mt-4 p-4 bg-red-100 text-red-700 rounded-md">
                {{ flash_message }}
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}





    